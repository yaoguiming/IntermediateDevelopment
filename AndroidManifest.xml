<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.why.layoutinflaterutils"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.why.layoutinflater.LayoutInflateActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.why.layoutinflater.ViewParentActivity"
            android:label="@string/title_activity_view_parent" >
        </activity>
        <activity
            android:name="cn.why.layoutinflater.LayoutParamsActivity"
            android:label="@string/title_activity_layout_params" >
        </activity>
        <activity
            android:name="cn.why.layoutinflater.DialogActivity"
            android:label="@string/title_activity_dialog" >
        </activity>
        <activity
            android:name="cn.why.menu.OptionMenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="cn.why.menu.ContextMenuActivity"
            android:label="@string/title_activity_context_menu" >
        </activity>
    </application>

</manifest>
